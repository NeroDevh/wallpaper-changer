<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="SERVICE_ACTIVE"
        android:summaryOn="@string/service_active_summary_on"
        android:summaryOff="@string/service_active_summary_off"
        android:title="@string/service_active_title" />

    <ListPreference
        android:defaultValue="1"
        android:dialogTitle="@string/update_interval_dialog_title"
        android:entries="@array/update_interval_entries_list_preference"
        android:entryValues="@array/update_interval_values_list_preference"
        android:key="UPDATE_INTERVAL"
        android:title="@string/update_interval_title" />

    <Preference android:title="Testing Intent" >
        <intent android:action="com.lamerman.FileDialog.SELECT_DIRECTORY" >
            <extra
                android:name="SELECTION_MODE"
                android:value="1" />
            <extra
                android:name="CAN_SELECT_DIR"
                android:value="true" />
        </intent>
    </Preference>

</PreferenceScreen>